<odoo>
    <data>
        <record id="action_report_hoa_don" model="ir.actions.report">
            <field name="name">In Hóa đơn</field>
            <field name="model">quan_ly_nha_tro.hoa_don</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">quan_ly_nha_tro.report_hoa_don_template</field>
            <field name="report_file">quan_ly_nha_tro.report_hoa_don_template</field>
            <field name="print_report_name">'Hoa_don_%s' % (object.name)</field>
            <field name="binding_model_id" ref="model_quan_ly_nha_tro_hoa_don"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_hoa_don_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="text-center">
                                <h2>HÓA ĐƠN TIỀN NHÀ</h2>
                                <h4><span t-field="o.name"/></h4>
                            </div>
                            <br/>
                            <div class="row">
                                <div class="col-6">
                                    <strong>Khách thuê:</strong> <span t-field="o.hop_dong_id.khach_thue_id.name"/><br/>
                                    <strong>Phòng:</strong> <span t-field="o.hop_dong_id.phong_tro_id.name"/><br/>
                                    <strong>Tháng:</strong> <span t-field="o.thang"/>
                                </div>
                                <div class="col-6 text-end">
                                    <strong>Trạng thái:</strong> 
                                    <span t-if="o.state == 'draft'">Nháp</span>
                                    <span t-if="o.state == 'confirm'">Chờ thanh toán</span>
                                    <span t-if="o.state == 'paid'">Đã thanh toán</span>
                                </div>
                            </div>
                            <br/>
                            <table class="table table-bordered">
                                <thead>
                                    <tr class="table-active">
                                        <th>Khoản mục</th>
                                        <th>Chỉ số</th>
                                        <th>Sử dụng</th>
                                        <th class="text-end">Thành tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Tiền Nhà</td>
                                        <td>-</td>
                                        <td>1 tháng</td>
                                        <td class="text-end"><span t-field="o.tien_thue_nha"/></td>
                                    </tr>
                                    <tr>
                                        <td>Điện (3.5k)</td>
                                        <td><span t-field="o.dien_cu"/> - <span t-field="o.dien_moi"/></td>
                                        <td><span t-field="o.so_dien_dung"/></td>
                                        <td class="text-end"><span t-field="o.tien_dien"/></td>
                                    </tr>
                                    <tr>
                                        <td>Nước (10k)</td>
                                        <td><span t-field="o.nuoc_cu"/> - <span t-field="o.nuoc_moi"/></td>
                                        <td><span t-field="o.so_nuoc_dung"/></td>
                                        <td class="text-end"><span t-field="o.tien_nuoc"/></td>
                                    </tr>
                                    <tr class="table-dark">
                                        <td colspan="3" class="text-end"><strong>TỔNG CỘNG:</strong></td>
                                        <td class="text-end"><strong><span t-field="o.tong_tien"/></strong></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>